<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/back1"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="353dp"
        android:layout_height="149dp"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="MSEB Mobile App"
            android:id="@+id/textView2"
            android:textSize="30dp"
            android:textColor="@color/front2"
            />


    </LinearLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edusername"
        android:layout_above="@+id/edpassword"
        android:hint="Enter username"
        android:singleLine="true"
        android:layout_marginBottom="10dp"
        android:textColor="@color/front2"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edpassword"
        android:selectAllOnFocus="false"
        android:hint="Enter password"
        android:singleLine="true"
        android:layout_marginBottom="10dp"
        android:textColor="@color/front2"
        android:layout_gravity="center_horizontal"
        android:inputType="textPassword"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:onClick="login"
        android:id="@+id/btnsignin"
        android:layout_marginTop="20dp"
        android:background="@color/back2"
        android:textColor="@color/front"
        android:layout_below="@+id/edpassword"
        android:layout_alignStart="@+id/btnsignup"
        android:layout_gravity="center_horizontal" />


</LinearLayout>
